---
import FooterMain from "../../components/FooterMain.astro";
import Navbar from "../../components/Navbar";
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Toldos">
    <Navbar client:only />
    <div
        class="hero"
        style="min-height: 40vh; background-image: url(/toldosmania-web/hero_bg/tela_sample.jpg);"
    >
        <div class="hero-overlay bg-opacity-70 bg-base-100"></div>
        <div class="hero-content">
            <div class="max-w-xl text-white">
                <h1 class="text-2xl font-bold">Galeria de Toldos</h1>
                <h3 class="text-lg font-semibold">
                    Veja todas as opções de Toldos
                </h3>
            </div>
        </div>
    </div>

    <FooterMain />
</Layout>
