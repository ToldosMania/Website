---
import Layout from "../../layouts/LayoutGaleria.astro";
import GalleryView from "../../components/GalleryView";
import toldos_lona from "../../json/toldos_lona.json";
import toldos_policarbonato from "../../json/toldos_policarbonato.json";
---

<Layout
    title="Galeria de Toldos"
    description="Veja todas as opções de toldos. Pressione para ver mais"
    sections={["lona","policarbonato"]}
>
    <section class="bg-white text-center text-base-100 px-12 py-10" id="lona">
        <h1 class="text-2xl text-base-300 pb-10 divider">Lona</h1>
        <div class="flex flex-row flex-wrap items-center justify-center">
            <GalleryView
                product_type="toldos_lona"
                gallery_items={toldos_lona}
                client:load
            />
        </div>
    </section>

    <section class="bg-white text-center text-base-100 px-12 py-10" id="policarbonato">
        <h1 class="text-2xl text-base-300 divider">Policarbonato</h1>
        <div class="flex flex-row flex-wrap items-center justify-center">
            <GalleryView
                product_type="toldos_policarbonato"
                gallery_items={toldos_policarbonato}
                client:load
            />
        </div>
    </section>
</Layout>