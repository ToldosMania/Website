---
import Layout from "../../layouts/LayoutGaleria.astro";
import GalleryView from "../../components/GalleryView";
import oito_mm from "../../json/vidros.json";
---

<Layout
    title="Galeria de Vidros"
    description="Veja todas as opções de vidros. Pressione para ver mais"
    sections={["8mm"]}
>
    <section class="bg-white text-center text-black px-12 py-10" id="policarbonato">
        <h1 class="text-2xl text-base-300 divider">8mm</h1>
        <div class="flex flex-row flex-wrap items-center justify-center">
            <GalleryView
                product_type="vidros_8mm"
                gallery_items={oito_mm}
                client:load
            />
        </div>
    </section>
</Layout>