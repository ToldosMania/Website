---
import Layout from "../../layouts/LayoutGaleria.astro";
import GallerySection from "../../components/GallerySection.astro";
import box from "../../json/vidros.json";
import portas from "../../json/vidros.json";
import jan_2_folhas from "../../json/vidros.json";
import jan_4_folhas from "../../json/vidros.json";
---

<Layout
    title="Galeria de Vidros"
    description="Veja todas as opções de vidros. Pressione para ver mais"
    sections={["box", "portas", "janela_2_folhas", "janela_4_folhas"]}
>
    <GallerySection
        id="box"
        title="Box"
        product_type="vidros_box"
        gallery_items={box}
    />
    <GallerySection
        id="portas"
        title="Portas"
        product_type="vidros_portas"
        gallery_items={portas}
    />
    <GallerySection
        id="janela_2_folhas"
        title="Janelas de 2 folhas"
        product_type="vidros_janela_2_folhas"
        gallery_items={jan_2_folhas}
    />
    <GallerySection
        id="janela_4_folhas"
        title="Janelas de 4 folhas"
        product_type="vidros_janela_4_folhas"
        gallery_items={jan_4_folhas}
    />
</Layout>