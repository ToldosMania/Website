---
import Layout from "../../layouts/LayoutGaleria.astro";
import GallerySection from "../../components/GallerySection.astro";

import coberturas_lona from "../../json/coberturas_lona.json";
import coberturas_policarbonato_retratil from "../../json/coberturas_policarbonato_retratil.json";
import coberturas_policarbonato_fixa from "../../json/coberturas_policarbonato_fixa.json";
import coberturas_telha_simples from "../../json/coberturas_telha_simples.json";
import coberturas_telha_isotermica from "../../json/coberturas_telha_isotermica.json";
---

<Layout
  title="Galeria de Coberturas"
  description="Veja todas as opções de coberturas. Pressione para ver mais"
  sections={[
    "lona",
    "policarbonato_fixa",
    "policarbonato_retratil",
    "telha_simples",
    "telha_isotérmica",
  ]}
>
  <GallerySection
    id="lona"
    title="Lona"
    product_type="coberturas_lona"
    gallery_items={coberturas_lona}
  />
  <GallerySection
    id="policarbonato_fixa"
    title="Policarbonato Fixa"
    product_type="coberturas_policarbonato_fixa"
    gallery_items={coberturas_policarbonato_fixa}
  />
  <GallerySection
    id="policarbonato_retratil"
    title="Policarbonato Retrátil"
    product_type="coberturas_policarbonato_retratil"
    gallery_items={coberturas_policarbonato_retratil}
  />
  <GallerySection
    id="telha_simples"
    title="Telha Simples"
    product_type="coberturas_telha_simples"
    gallery_items={coberturas_telha_simples}
  />
  <GallerySection
    id="telha_isotermica"
    title="Telha Isotérmica/Sanduíche"
    product_type="coberturas_telha_isotermica"
    gallery_items={coberturas_telha_isotermica}
  />
</Layout>
