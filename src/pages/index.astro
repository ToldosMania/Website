---
import Icon from "astro-icon";
import Layout from "../layouts/Layout.astro";
import Footer from "../components/FooterMain.astro";
import Navbar from "../components/Navbar";
import SectionContato from "../components/SectionContato.astro";
---

<Layout title="ToldosMania">
    <Navbar client:only />
    <main class="scroll-smooth">
        <div
            class="hero"
            style="min-height: 80vh; background-image: url(/toldosmania-web/hero_bg/toldo_sample.webp);"
        >
            <div class="hero-overlay bg-opacity-70"></div>
            <div class="hero-content text-center text-white">
                <div class="max-w-xl">
                    <h1 class="mt-16 lg:mt-10 mb-5 text-2xl lg:text-4xl font-bold">
                        Somos especializados na fabricação e instalação de
                        toldos e coberturas com design moderno.
                    </h1>
                    <p class="mb-5 text-md lg:text-lg">
                        Compromissados em satisfazer nossos clientes e
                        fornecedores, garantindo a qualidade e durabilidade de
                        nossos produtos.
                    </p>
                    <a
                        href="#produtos"
                        class="btn btn-info xl:btn-lg m-3 sm:btn-md border-b-4 border-blue-200 bg-white hover:bg-gray-300 hover:border-gray-300 text-gray-800"
                        >Veja Nossos Produtos</a
                    >
                    <a
                        href="#contato"
                        class="btn btn-info text-white m-3 xl:btn-lg sm:btn-md border-b-4 border-blue-400 hover:bg-blue-400 hover:border-blue-400"
                        >Contato
                        <Icon
                            pack="mdi"
                            name="arrow-right"
                            style="width: 30px; height: 30px"
                        /></a
                    >
                </div>
            </div>
        </div>
        <section class="bg-gray-100 text-gray-800 p-3 py-10" id="produtos">
            <h1 class="divider text-center text-2xl text-black m-4 mb-16">
                Nossos Produtos
            </h1>
            <div class="flex flex-wrap justify-center">
                <div class="flex lg:flex-row md:flex-col justify-center m-3">
                    <a
                        class="card bg-blue-400 border-b-blue-500 border-b-4 text-white shadow-xl hover:bg-blue-500 transition-colors"
                        href="/toldosmania-web/galeria/toldos"
                    >
                        <figure>
                            <img
                                src="/toldosmania-web/produtos/toldo.jpg"
                                alt="Toldos"
                                class="w-96 h-64"
                            />
                        </figure>
                        <div class="card-body text-2xl text-center py-3">
                            Toldos
                        </div>
                    </a>
                </div>
                <div class="flex lg:flex-row md:flex-col justify-center m-3">
                    <a
                        class="card bg-blue-400 border-b-blue-500 border-b-4 text-white shadow-xl hover:bg-blue-500 transition-colors"
                        href="/toldosmania-web/galeria/coberturas"
                    >
                        <figure>
                            <img
                                src="/toldosmania-web/produtos/lona.jpg"
                                alt="Cobertura de Lona"
                                class="w-96 h-64"
                            />
                        </figure>
                        <div class="card-body text-2xl text-center py-3">
                            Coberturas
                        </div>
                    </a>
                </div>
                <div class="flex lg:flex-row md:flex-col justify-center m-3">
                    <a
                        class="card bg-blue-400 border-b-blue-500 border-b-4 text-white shadow-xl hover:bg-blue-500 transition-colors"
                        href="/toldosmania-web/galeria/telas"
                    >
                        <figure>
                            <img
                                src="/toldosmania-web/produtos/tela_sombreamento.jpg"
                                alt="Telas de Sombreamento"
                                class="w-96 h-64"
                            />
                        </figure>
                        <div class="card-body text-2xl text-center py-3">
                            Telas de Sombreamento
                        </div>
                    </a>
                </div>
                <div class="flex lg:flex-row md:flex-col justify-center m-3">
                    <a
                        class="card bg-blue-400 border-b-blue-500 border-b-4 text-white shadow-xl hover:bg-blue-500 transition-colors"
                        href="/toldosmania-web/galeria/vidros"
                    >
                        <figure>
                            <img
                                src="/toldosmania-web/produtos/vidros.jpeg"
                                alt="Vidros"
                                class="w-96 h-64"
                            />
                        </figure>
                        <div class="card-body text-2xl text-center py-3">
                            Vidros
                        </div>
                    </a>
                </div>
                <div class="flex lg:flex-row md:flex-col justify-center m-3">
                    <a
                        class="card bg-blue-400 border-b-blue-500 border-b-4 text-white shadow-xl hover:bg-blue-500 transition-colors"
                        href="/toldosmania-web/galeria/cortinas"
                    >
                        <figure>
                            <img
                                src="/toldosmania-web/produtos/cortina_rolo.png"
                                alt="Cortinas Rolô"
                                class="w-96 h-64"
                            />
                        </figure>
                        <div class="card-body text-2xl text-center py-3">
                            Cortinas Rolô
                        </div>
                    </a>
                </div>
            </div>
        </section>
        <section
            class="bg-white text-gray-800 p-3 py-10 flex flex-col flex-wrap justify-center items-center"
            id="materiais"
        >
            <h1 class="divider text-2xl text-center m-4 mb-16">
                Quem somos nós?
            </h1>
            <div class="flex flex-row flex-wrap">
                <figure>
                    <img
                        src="/toldosmania-web/hero_bg/tela_sample.jpg"
                        alt="Toldos Mania - Exemplo de Toldo"
                        class="rounded-2xl w-max lg:h-96"
                    />
                </figure>
                <div class="flex flex-col m-3 mx-6">
                    <p class="max-w-md">
                        Fundada em 2005, a ToldosMania é uma empresa dedicada à
                        fabricação e instalação de toldos e coberturas. Ao longo
                        dos anos, estabelecemos nossa presença no mercado por
                        meio do desenvolvimento de produtos de design
                        contemporâneo, priorizando a satisfação das necessidades
                        de nossos clientes. Nossa reputação é construída com
                        base em nosso compromisso sólido com clientes e
                        fornecedores, refletindo a confiança que depositam em
                        nossa empresa. Priorizamos a excelência em todas as
                        etapas do processo de fabricação, garantindo a
                        durabilidade e a plena satisfação daqueles que escolhem
                        os produtos da ToldosMania.
                    </p>
                    <a
                        href="#contato"
                        class="btn btn-info text-white mx-6 m-4 xl:btn-lg sm:btn-md border-b-4 border-blue-400 hover:bg-blue-400 hover:border-blue-400"
                        >Entre em Contato
                    </a>
                </div>
            </div>
        </section>
        <section class="bg-gray-100 text-gray-800 p-3 py-10" id="materiais">
            <h1 class="divider text-2xl text-bold pb-2">Materiais de Toldos</h1>
            <p class="text-center text-lg pb-8">
                Materiais utilizados para a fabricação de nossos produtos
            </p>
            <div class="flex flex-wrap justify-center">
                <div class="card w-96 bg-gray-200 text-black shadow-xl m-5">
                    <figure>
                        <img
                            src="/toldosmania-web/materiais/lona_sample1.png"
                            alt="Material de Lona"
                            class="h-56"
                        />
                    </figure>
                    <div class="card-body">
                        <h2 class="card-title text-center">Lona</h2>
                        <p>
                            O produto é aditivado para resistir aos raios UV
                            dando maior durabilidade, e garantindo cores vivas
                            por mais tempo. Auto-extinguível: não propaga o fogo
                            desde que eliminada sua fonte. Antioxidante: promove
                            maior durabilidade e reduz o efeito de oxidação.
                            Antifungo: reduz a ação dos fungos no toldo.
                        </p>
                    </div>
                </div>
                <div class="card w-96 bg-gray-200 text-black shadow-xl m-5">
                    <figure>
                        <img
                            src="/toldosmania-web/materiais/policarbonato_sample1.png"
                            alt="Material de Lona"
                            class="h-56"
                        />
                    </figure>
                    <div class="card-body">
                        <h2 class="card-title">Policarbonato</h2>
                        <p>
                            Placa de policarbonato compacta 3mm ou alveolar 6mm
                            recebe proteção UV na parte superior que será
                            exposta ao sol, garantindo assim maior durabilidade
                            e evitando o ressecamento, amarelecimento e
                            descoloração da chapa. Placa compacta é maciça
                            lembra o vidro liso à placa alveolar lembra o vidro
                            canelado.
                        </p>
                    </div>
                </div>
                <div class="card w-96 bg-gray-200 text-black shadow-xl m-5">
                    <figure>
                        <img
                            src="/toldosmania-web/materiais/tela_sombreamento.jpg"
                            alt="Material de Lona"
                            class="h-56"
                        />
                    </figure>
                    <div class="card-body">
                        <h2 class="card-title">Tela de Sombreamento</h2>
                        <p>
                            Confeccionada em polietileno de alta densidade e com
                            aditivos especiais que proporcionam caracteríscas
                            importantes as telas com proteção contra raios ultra
                            violetas e redução da luminocidade solar. Produto
                            passa água, não é impermeabilizado.
                        </p>
                    </div>
                </div>
                <div class="card w-96 bg-gray-200 text-black shadow-xl m-5">
                    <figure>
                        <img
                            src="/toldosmania-web/materiais/aço_galvanizado.jpg"
                            alt="Material de Lona"
                            class="h-56"
                        />
                    </figure>
                    <div class="card-body">
                        <h2 class="card-title">Aço Galvanizado</h2>
                        <p>
                            Para confecção de nossas estruturas utilizamos tubos
                            de aço galvanizado.
                        </p>
                    </div>
                </div>
            </div>
        </section>
        <section class="p-3 py-10 bg-white" id="contato">
            <h1 class="divider text-center text-2xl text-black pb-4">
                Contato
            </h1>
            <p class="text-center text-lg pb-8 text-black">
                Se interessou? Entre em contato!
            </p>
            <SectionContato />
        </section>
    </main>
    <Footer />
</Layout>