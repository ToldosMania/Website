---
import { ViewTransitions } from "astro:transitions";
import FooterMain from "../components/FooterMain.astro";
import Navbar from "../components/Navbar";
import SectionContato from "../components/SectionContato.astro";
import { BASE_URL } from "../toldosmania_info";

interface Props {
  title: string;
  description: string;
  sections: string[] | null;
}

const { title, description, sections } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${BASE_URL}/favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <title>{title}</title>
  </head>
  <body>
    <Navbar client:only />
    <main class="min-h-screen bg-base-100">
      <div
        class="hero min-h-screen"
        style={`min-height: 30vh; background-image: url(${BASE_URL}/hero_bg/tela_sample.jpg);`}
      >
        <div class="hero-overlay bg-base-100 bg-opacity-70"></div>
        <div class="hero-content">
          <div class="max-w-xl text-base-content">
            <h1 class="mt-16 text-xl font-bold lg:mt-10 lg:text-2xl">
              {title}
            </h1>
            <h3 class="text-sm font-semibold lg:text-lg">
              {description}
            </h3>
            {
              sections?.map((sect) => (
                <a
                  href={"#" + sect}
                  class="btn btn-accent mx-1 my-3 rounded-2xl py-3 text-accent-content"
                >
                  {sect}
                </a>
              ))
            }
          </div>
        </div>
      </div>
      <slot />
      <template id="zoom-template">
        <section data-zoom-container></section>
        <div
          class="fixed bottom-0 left-0 right-0 top-auto flex flex-col items-center"
        >
          <div
            class="mb-6 max-h-56 max-w-screen-md rounded-xl border-4 border-base-200 bg-base-200 p-5 text-base-content shadow-xl"
          >
            <div class="flex flex-col lg:flex-row">
              <h1 class="grow text-xl lg:text-2xl" id="zoom-template-title">
                Title Here
              </h1>
              <img
                src={`${BASE_URL}/icon/mdi-close-circle.svg`}
                alt="Close"
                class="zoom-template-close hidden h-8 w-8 grow-0 lg:block"
              />
            </div>

            <p class="text-md lg:text-xl" id="zoom-template-description">
              Description
            </p>

            <img
              src={`${BASE_URL}/icon/mdi-close-circle.svg`}
              alt="Close"
              class="zoom-template-close h-8 w-8 lg:hidden"
            />
          </div>
        </div>
      </template>
      <section class="bg-base-200 p-3 py-10" id="contato">
        <h1 class="divider pb-2 text-center text-2xl text-black">Contato</h1>
        <p class="pb-8 text-center text-lg text-black">
          Se interessou? Entre em contato!
        </p>
        <SectionContato />
      </section>
    </main>
    <FooterMain />

    <script>
      import mediumZoom from "medium-zoom";

      const zoom = mediumZoom(".zoomable-item", {
        template: "#zoom-template",
      });

      const set_current_title = (text) => {
        document.querySelector("h1#zoom-template-title").innerHTML = text;
      };

      const set_current_description = (text) => {
        document.querySelector("p#zoom-template-description").innerHTML = text;
      };

      document.querySelectorAll("img.zoomable-item").forEach((button) => {
        button.addEventListener("click", () => {
          setTimeout(() => {
            set_current_description(button.dataset.description);
            set_current_title(button.alt);

            document
              .querySelectorAll("img.zoom-template-close")
              .forEach((button) => {
                button.addEventListener("click", () => {
                  zoom.close();
                });
              });
          }, 50);
        });
      });
    </script>
    <style>
      html {
        scroll-behavior: smooth;
      }
    </style>
  </body>
</html>
