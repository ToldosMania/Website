---
import { ViewTransitions } from "astro:transitions";
import FooterMain from "../components/FooterMain.astro";
import Navbar from "../components/Navbar";
import { BASE_URL } from "../toldosmania_info";

const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={`${BASE_URL}/favicon.svg`} />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
    <title>{frontmatter.title}</title>
  </head>
  <body>
    <Navbar client:only />
    <main class="min-h-screen">
      <div
        class="hero min-h-screen"
        style={`min-height: 30vh; background-image: url(${BASE_URL}/hero_bg/vidro_sample.jpg);`}
      >
        <div class="hero-overlay bg-base-100 bg-opacity-70"></div>
        <div class="hero-content">
          <div class="max-w-xl text-base-content">
            <h1 class="mt-16 text-xl font-bold lg:mt-10 lg:text-2xl">
              {frontmatter.title}
            </h1>
            <h3 class="text-sm font-semibold lg:text-lg">
              {frontmatter.description}
            </h3>
            <h4 class="text-sm font-semibold lg:text-lg">
              Publicado em {frontmatter.pubDate.slice(0, 10)}
            </h4>
          </div>
        </div>
      </div>
      <section
        id="blogpost"
        class="flex min-h-screen flex-row justify-center bg-base-100 p-3 pt-10 text-black"
      >
        <div class="text-md max-w-screen-md text-base-content lg:text-lg">
          <slot />
        </div>
      </section>
    </main>
    <FooterMain />
    <style>
      html {
        scroll-behavior: smooth;
      }
    </style>
  </body>
</html>
