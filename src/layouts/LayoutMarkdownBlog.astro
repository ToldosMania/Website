---
import { ViewTransitions } from "astro:transitions";
import FooterMain from "../components/FooterMain.astro";
import Navbar from "../components/Navbar";
import { BASE_URL } from "../toldosmania_info";

const { frontmatter } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href={`${BASE_URL}/favicon.svg`} />
        <meta name="generator" content={Astro.generator} />
        <ViewTransitions />
        <title>{frontmatter.title}</title>
    </head>
    <body>
        <Navbar client:only />
        <main class="min-h-screen">
            <div
                class="hero min-h-screen"
                style={`min-height: 30vh; background-image: url(${BASE_URL}/hero_bg/vidro_sample.jpg);`}
            >
                <div class="hero-overlay bg-opacity-70 bg-base-100"></div>
                <div class="hero-content">
                    <div class="max-w-xl text-white">
                        <h1
                            class="mt-16 lg:mt-10 text-xl lg:text-2xl font-bold"
                        >
                            {frontmatter.title}
                        </h1>
                        <h3 class="text-sm lg:text-lg font-semibold">
                            {frontmatter.description}
                        </h3>
                        <h4 class="text-sm lg:text-lg font-semibold">
                            Publicado em {frontmatter.pubDate.slice(0,10)}
                        </h4>
                    </div>
                </div>
            </div>
            <section id="blogpost" class="min-h-screen bg-white text-black flex flex-row justify-center p-3 pt-10">
                <div class="text-black text-md lg:text-lg max-w-screen-md">
                    <slot />
                </div>
            </section>
        </main>
        <FooterMain />
        <style>
            html {
                scroll-behavior: smooth;
            }
        </style>
    </body>
</html>