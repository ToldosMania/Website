---
import GalleryView from './GalleryView';
import type { GalleryItem } from '../toldosmania_info';

interface Props {
    id: string;
    title: string;
    product_type: string;
    gallery_items: GalleryItem[];
}

const { id, title, product_type, gallery_items } = Astro.props;
---

<section class="bg-white text-center text-black px-12 py-10" id={id}>
    <h1 class="text-2xl text-base-300 divider">{title}</h1>
    <div class="flex flex-row flex-wrap items-center justify-center">
        <GalleryView
            product_type={product_type}
            gallery_items={gallery_items}
            client:load
        />
    </div>
</section>
 